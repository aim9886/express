{{!-- <h1>Task managers</h1> --}}

<div class="container">
    <form action="/task-manager/task" id="form" method="post">
    <h1>Task manager</h1>
    <label for="task">Task</label>
    <input type="text" name="task" id="task">
    <button type="submit">Add Task</button>
    </form>
</div>


<div class="container">
    <h2>List Of Tasks</h2>
    <table>

        <tr>
            <th>Task Name</th>
            <th>Update Task</th>
            <th>Delete Task</th>
        </tr>
         {{#each tasks}}
        <tr>
            <td>{{task}}</td>
            <td><a href="/task-manager/task/{{_id}}"><i class="fa-sharp fa-solid fa-pen-to-square"></i></a></td>
            <td>

            <form method="POST" action="/task-manager/task/{{_id}}?_method=DELETE" enctype="application/x-www-form-urlencoded">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit"><i class="fa-solid fa-trash"></i></button>
            </form>
            </td>
        </tr>
         {{/each}}
    </table>
</div>
